{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"definitions": {
		"checklistGroup": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"name": {
						"type": "string",
						"required": true
					},
					"shortName": {
						"type": "string",
						"required": false
					},
					"complete": {
						"type": "boolean",
						"required": true
					}
				}
			}
		}
	},

	"type": "object",
	"properties": {
		"extraContent": {
			"$ref": "#/definitions/checklistGroup"
		},
		"techStationDuties": {
			"$ref": "#/definitions/checklistGroup"
		},
		"stageTechDuties": {
			"$ref": "#/definitions/checklistGroup"
		}
	},

	"default": {
		"techStationDuties": [
			{"name": "All unwanted audio is off", "complete": false},
			{"name": "Commentator/Live profiles have correct stream keys", "complete": false},
			{"name": "Select correct race in schedule (or manually)", "complete": false},
			{"name": "Verified that OBS is updated.", "complete": false},
			{"name": "Generated trackers & hit View", "complete": false},
			{"name": "Entered passwords, round, standings & Saved", "complete": false},
			{"name": "Ran $RestreamRace #### in #restreamer [Edit Current]", "complete": false},
			{"name": "Entered SRTV link in box, Saved.", "complete": false},
			{"name": "Send pastes to runners/crew", "complete": false},
			{"name": "Crop runners that are live early", "complete": false},
			{"name": "Checked twitch stream title & !c !r", "complete": false},
			{"name": "Sent paste to mods if changes req. [Edit Current]", "complete": false}
		],
		"extraContent": [
			{"name": "Started commentary restream", "complete": false},
			{"name": "Commentary restream live, commentators agreed.", "complete": false},
			{"name": "Did Discord sound check w/ comms", "complete": false},
			{"name": "Sent seed to runners.", "complete": false},
			{"name": "Ensured all runners are cropped.", "complete": false},
			{"name": "Did runner/YT audio check.", "complete": false}
		],
		"stageTechDuties": [
			{"name": "Gave 30s/15s/10/5/now prep notice in Mixer", "complete": false},
			{"name": "Went live on Twitch", "complete": false},
			{"name": "Twitch stream live, confirmed.", "complete": false},
			{"name": "Confirmed runners are ready.", "complete": false},
			{"name": "Commentator introductions did their introductions", "complete": false},
			{"name": "$StartRace SRTV-GUID in #restreamer", "complete": false}
		]
	}
}
